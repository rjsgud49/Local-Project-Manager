{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist-electron",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "types": [
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmitOnError": false
    },
    "include": [
        "./**/*.ts"
    ]
}