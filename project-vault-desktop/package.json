{
  "name": "project-vault-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.yourname.projectvault",
    "productName": "Project Vault",
    "files": [
      "dist/**",
      "dist-electron/**",
      "public/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
    "scripts": {
      "dev": "concurrently -k -r \"vite\" \"npm:dev:main\"",
      "dev:main": "concurrently -k -r \"npm:watch:electron\" \"npm:watch:preload\" \"npm:start:electron\"",
      "watch:electron": "tsc -p electron/tsconfig.json -w",
      "watch:preload": "chokidar electron/preload.cjs -c \"node -e \\\"require('fs').mkdirSync('dist-electron',{recursive:true}); require('fs').copyFileSync('electron/preload.cjs','dist-electron/preload.cjs')\\\"\"",
      "start:electron": "cross-env VITE_DEV_SERVER=true electron .",
      "build:renderer": "vite build",
      "build:electron": "tsc -p electron/tsconfig.json",
      "build": "npm run build:renderer && npm run build:electron && node -e \"require('fs').mkdirSync('dist-electron',{recursive:true}); require('fs').copyFileSync('electron/preload.cjs','dist-electron/preload.cjs')\"",
      "pack": "npm run build && electron-builder --dir",
      "dist": "npm run build && electron-builder"
    },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vite": "^5.3.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
